<div class="col-md-5 col-md-offset-3 text-center" style="padding-top:100px" >

<h3>Please Log in </h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <h3><%= f.label :email %></h3><br />
    <div class="col-md-6 col-md-offset-3 text-center">
    <%= f.email_field :email, autofocus: true ,placeholder:"Please enter Email" ,class:"form-control"%>
  </div></div><br><br>

  <div class="field">
    <h3><%= f.label :password %></h3><br />
    <div class="col-md-6 col-md-offset-3 text-center">
    <%= f.password_field :password, autocomplete: "off" ,placeholder:"Please enter password" ,class:"form-control " %>
  </div>
  </div>
<br><br><br>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <h4><%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    <h4></div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" ,class:"btn btn-info btn-lg" %>
  </div>
<% end %>
<h4>
<%= render "devise/shared/links" %>
</h4>
</div>